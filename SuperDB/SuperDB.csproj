<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<PublishSingleFile>true</PublishSingleFile>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<DebugType>none</DebugType>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<ProduceReferenceAssembly>False</ProduceReferenceAssembly>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>

		<PackageId>SuperDB</PackageId>
		<Description>
			An ultra-lightweight and portable database system written in pure C# with no external dependancies.
		</Description>
		<Version>1.0.4</Version>
		<Authors>Terminal.cs</Authors>
		<Company>N/A</Company>
		<RepositoryUrl>github.com/Terminal-cs/SuperDB</RepositoryUrl>
		<PackageProjectUrl>github.com/Terminal-cs/SuperDB</PackageProjectUrl>
		<PackageTags>database;db;storage;game database;super db</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>
